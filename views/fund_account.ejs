<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../views/head'); %>
    <title>Fund Account</title>
    
  </head>
  <body>
    <nav style='font-size: 1.2em; font-weight: 500;' class='navbar navbar-expand-lg navbar-light bg-light'>
      <button class='navbar-toggler' type='button' data-toggle='collapse' data-target='#navbar'>
          <span class='navbar-toggler-icon'></span>
      </button>
      <div class='collapse navbar-collapse' id='navbar'>
          <div class='navbar-nav'>
          
              <a class='nav-item nav-link' id='login' href='/fund_account'>Fund Account</a>
              <a class='nav-item nav-link' id='signUp' href='/transfer'>Transfer</a>
              <a class='nav-item nav-link' id='signUp' href='/logout'>Log Out</a>

          </div>
      </div>
    </nav>

    <div class='container'>
      <form  method='POST' id="paymentForm" action="/fundAccount">
        <div class="form-column">
          <div class="form-group col-md-6">
           <span>Balance : </span>
           <span name='balance' id='balance'><%= balance %></span>
          </div>
  
          <div class="form-group col-md-6">
            <label for="email">Email</label>
            <input type="email" name='email' class="form-control" id="email" placeholder="Email" required>
          </div>
  
          <div class="form-group col-md-6">
            <label for="amount">Amount</label>
            <input type="text" name='amount' class="form-control" id="amount" placeholder="Amount" required>
          </div>
          
          <div class="form-group col-md-6">
            <label for="first-name">First Name</label>
            <input type="text" name= 'first-name' class="form-control" id="first-name" placeholder="First Name" required>
          </div>
  
          <div class="form-group col-md-6">
            <label for="last-name">Last Name</label>
            <input type="text" name= 'last-name' class="form-control" id="last-name" placeholder="Last Name" required>
          </div>
  
          <div class="form-group col-md-6">
          <button type="submit" class="btn btn-primary" onclick="payWithPaystack()"> Fund Account</button>
          </div>
          
      </form>
    </div>



    <%- include('../views/bottom'); %>
    <script type="text/javascript" src="/fund_acc.js"></script>
    <script src="https://js.paystack.co/v1/inline.js"></script> 
  </body>
</html>
        